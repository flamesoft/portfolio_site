%section
  %h2 Projects
  .row
    .large-8.columns
    - data.projects.each_slice(3) do |group|
      .row
      - group.each do |project|
        - image_url = get_image(project[:image_url])
        .large-4.small-6.columns
          #cell
            = image_tag image_url
            .panel
              %h4= project[:name]
              %h6.subheader= project[:description]

<!doctype html>
%html
  %head
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
      %meta{:charset => "utf-8"}
        %meta{:content => "width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no", :name => "viewport"}
          / Use title if it's in the page YAML frontmatter
          %title= current_page.data.title || "Portfolio - Yan Zhang"
          %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/foundation/6.2.1/foundation.min.css", :rel => "stylesheet", :type => "text/css"}
          %link{:href => "//fonts.googleapis.com/css?family=Lato:300,400", :rel => "stylesheet", :type => "text/css"}
            = stylesheet_link_tag :site
            = javascript_include_tag :all
  %body{:class => page_classes}
    = partial 'partials/header'
    = yield
    = partial 'partials/footer'
    %link{:href => "https://code.jquery.com/jquery-2.2.3.min.js",  :type => "text/javascript"}
    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/foundation/6.2.1/foundation.min.js", :type => "text/javascript"}
    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/foundation/6.2.1/foundation.topbar.min.js", :type => "text/javascript"}
